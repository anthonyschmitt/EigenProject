@using Interfaces
@using Microsoft.AspNetCore.Http

@model EigenprojectProject.ViewModels.UserViewModel

@{
    ViewBag.Title = "Registreer";
}

<h2>Registreer een nieuwe gebruiker</h2>

@Html.AntiForgeryToken()
<hr />
<div class="row">
    <div class="col-md-5" style="margin-left: auto; margin-right: auto; float: none">
        <form asp-controller="User" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" placeholder="Gebruikersnaam" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" placeholder="Voornaam" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" placeholder="Achternaam" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" placeholder="Email adres" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="ConfirmEmail" class="control-label"></label>
                <input asp-for="ConfirmEmail" placeholder="Bevestig Email adres" class="form-control" />
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Wachtwoord" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" placeholder="Herhaal Wachtwoord" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <br />
                <br />
                    <label asp-for="AccessLevel" class="control-label">Gebruikers bevoegdheid</label>
                    <select asp-for="AccessLevel" class="eigenproject_dropdown">
                        <option value=@AccessLevel.user>Standaard</option>
                        @if (Context.Session.GetInt32("AccessLevel") > 0)
                        {
                            <option value=@AccessLevel.admin>Admin</option>
                        }
                    </select>
                <!-- End dropdown 2-->
                <button type="submit" value="Create" class="btn eigenproject_button" style="margin-top: 20px;">Registreer</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="User" asp-action="Index">Terug</a>
</div>

@section Scripts {
    <script src="~/js/eigenproject_button.js" type="text/javascript"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
